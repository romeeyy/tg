<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="14dp">

    <!-- Timestamp + Emotion -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <TextView
            android:id="@+id/tvTimestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Today, 3:42 PM"
            android:textSize="11sp"
            android:textColor="@color/subTitleColor" />

        <TextView
            android:id="@+id/tvEmotionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Neutral"
            android:textSize="11sp"
            android:textStyle="bold"
            android:padding="6dp"
            android:background="@drawable/emotion_badge_bg"
            android:textColor="@android:color/white" />
    </LinearLayout>


    <!-- User entry card -->
    <TextView
        android:id="@+id/tvUserText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/entry_user_bg"
        android:padding="14dp"
        android:textColor="@color/titleColor"
        android:textSize="13sp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp" />

    <!-- Tokki response card -->
    <TextView
        android:id="@+id/tvTokkiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/entry_ai_bg"
        android:padding="14dp"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

</LinearLayout>
