<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="110dp">

        <LinearLayout
            android:id="@+id/llContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivTokkiSmall"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/mindtokki_logo"
                    android:contentDescription="Tokki logo" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <TextView
                        android:id="@+id/tvAppTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mind Tokki"
                        android:textColor="@color/titleColor"
                        android:textStyle="bold"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/tvWelcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, friend! ðŸŒ¸"
                        android:textColor="@color/subTitleColor"
                        android:textSize="11.5sp"/>
                </LinearLayout>

                <!-- Calm Points pill (left of dark toggle) -->
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="âœ¨ 0 Calm Points"
                    android:textSize="12sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/points_pill"
                    android:layout_marginEnd="8dp"/>

                <!-- Dark mode toggle (small rounded like Figma - top right) -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/btnDarkToggle"
                    android:layout_width="44dp"
                    android:layout_height="36dp"
                    android:background="@drawable/dark_toggle_bg"
                    android:padding="8dp"
                    android:src="@drawable/ic_moon"
                    android:contentDescription="Toggle dark mode"
                    android:tint="@color/darkToggleIconTint"
                    android:layout_marginEnd="4dp"/>
            </LinearLayout>

            <!-- Welcome card: compact horizontal layout (p-6) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginTop="14dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/purple_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- sparkles icon + welcome small label -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_sparkles_small"
                        app:tint="@color/sparklesTint"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="10dp">

                        <TextView
                            android:id="@+id/tvHelloSmallBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello, friend! ðŸŒ¸"
                            android:textSize="12sp"
                            android:textColor="@color/welcomeLabelColor"/>

                        <TextView
                            android:id="@+id/tvHelloSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hello, friend! ðŸŒ¸"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/welcomeTitleColor"/>

                        <TextView
                            android:id="@+id/tvHowAreYouSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="How are you feeling today?"
                            android:textSize="12sp"
                            android:textColor="@color/welcomeSubColor"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>

                    <!-- Points badge on right of card -->
                    <TextView
                        android:id="@+id/tvCardPoints"
                        android:layout_width="64dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="Points\n0"
                        android:textSize="11sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/points_badge"
                        android:padding="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Progress ðŸŒŸ"
                android:textColor="@color/progressPurple"
                android:textStyle="bold"
                android:layout_marginTop="18dp"
                android:textSize="14sp"/>

            <!-- 2x2 Grid progress stats (reduced paddings / gap-3 / smaller icons/text) -->
            <GridLayout
                android:id="@+id/gridProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:useDefaultMargins="true"
                android:alignmentMode="alignMargins"
                android:layout_marginTop="8dp">

                <!-- Journal Streak -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/statCardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_fire_small"
                            app:tint="#EC4899"/>


                        <TextView
                            android:id="@+id/tvStatJournalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="22dp"
                            android:layout_marginTop="6dp"
                            android:text="Streak"
                            android:textColor="@color/statValueColor"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Journal Streak"
                            android:textSize="12sp"
                            android:textColor="@color/statLabelColor"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Study Sessions -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/statCardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_book_small"
                            app:tint="#8B5CF6" />

                        <TextView
                            android:id="@+id/tvStatStudyValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/statValueColor"
                            android:layout_marginTop="6dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Study Sessions"
                            android:textSize="12sp"
                            android:textColor="@color/statLabelColor"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Garden Plants -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/statCardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_sprout_small"
                            app:tint="#10B981" />

                        <TextView
                            android:id="@+id/tvStatGardenValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="23"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/statValueColor"
                            android:layout_marginTop="6dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Garden Plants"
                            android:textSize="12sp"
                            android:textColor="@color/statLabelColor"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mood Entries -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/statCardBg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_heart_small"
                            app:tint="#3B82F6" />

                        <TextView
                            android:id="@+id/tvStatMoodValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/statValueColor"
                            android:layout_marginTop="6dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood Entries"
                            android:textSize="12sp"
                            android:textColor="@color/statLabelColor"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>

            <!-- Explore Features heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Explore Features ðŸŒ¿"
                android:textColor="@color/titleColor"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- 4 feature cards (compact: p-5, gap-3) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- AI Mood Journal -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFeatureJournal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/featureCardBg"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/feature_square_pink"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvFeatureTitle22"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mood Journal"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/titleColor" />


                            <TextView
                                android:id="@+id/tvFeatureDesc1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Express feelings and get AI insights"
                                android:textSize="12sp"
                                android:textColor="@color/subTitleColor"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_right"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Chat with Tokki -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFeatureChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/featureCardBg"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/feature_square_purple"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFeatureTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chat with Tokki"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/titleColor" />


                            <TextView
                                android:id="@+id/tvFeatureDesc2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Talk with your friendly AI bunny"
                                android:textSize="12sp"
                                android:textColor="@color/subTitleColor"
                                android:layout_marginTop="2dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/mindtokki_logo"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Study & Wellness -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFeatureStudy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/featureCardBg"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/feature_square_blue"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFeatureTitle3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Study and Wellness"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/titleColor" />


                            <TextView
                                android:id="@+id/tvFeatureDesc3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Schedules and tips"
                                android:textSize="12sp"
                                android:textColor="@color/subTitleColor"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_right"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mind Tokki Garden -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardFeatureGarden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/featureCardBg"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <View
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/feature_square_green"
                            android:layout_marginEnd="10dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvFeatureTitle4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mind Tokki Garden"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/titleColor" />

                            <TextView
                                android:id="@+id/tvFeatureDesc4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Grow your garden as you earn points"
                                android:textSize="12sp"
                                android:textColor="@color/subTitleColor"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_plant_garden" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

            <!-- Daily Tip card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/dailyTipBg"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="21dp"
                        android:src="@drawable/ic_lightbulb" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Tokki's Daily Tip: Try the Pomodoro technique â€” 25 mins focus, 5 mins break."
                        android:textSize="13sp"
                        android:textColor="@color/subTitleColor"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Fixed bottom navigation bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_gravity="bottom"
        android:background="@drawable/tokki_bottom_nav_bg"
        android:elevation="12dp"
        app:itemBackground="@drawable/tokki_nav_item_background"
        app:itemIconSize="26dp"
        app:itemVerticalTranslationEnabled="false"
        app:itemIconTint="@color/tokki_nav_selector"
        app:itemTextColor="@color/tokki_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/tokki_bottom_nav_menu" />





</androidx.coordinatorlayout.widget.CoordinatorLayout>
