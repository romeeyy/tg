<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN SCROLL CONTENT -->
    <ScrollView
        android:id="@+id/scrollStudy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@drawable/bg_dashboard"
        android:padding="16dp"
        android:paddingBottom="88dp"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/studyRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- 1. HEADER: Study & Wellness Hub -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/blue_gradient_start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvStudyIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="ðŸ§ "
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <TextView
                        android:id="@+id/tvStudyTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Study &amp; Wellness Hub"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvStudySubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Smart tools and wellness activities to help you study effectively ðŸŒ¸"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. STATS ROW: Time, Sessions, Tasks, Streak -->
        <LinearLayout
            android:id="@+id/layoutStatsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="16dp">

            <!-- Total Time -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/purple_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â°  Total Time"
                        android:textSize="11sp"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:id="@+id/tvStatTotalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="145"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="min"
                        android:textSize="11sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sessions -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/featureCardBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ… Sessions"
                        android:textSize="11sp"
                        android:textColor="@color/progressPurple" />

                    <TextView
                        android:id="@+id/tvStatSessions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tasks Done -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/dailyTipBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Tasks"
                        android:textSize="11sp"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:id="@+id/tvStatTasks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Day Streak -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/peach_soft">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ† Streak"
                        android:textSize="11sp"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:id="@+id/tvStatStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 ðŸ”¥"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 3. POMODORO TIMER CARD -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/featureCardBg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Mode badge -->
                <TextView
                    android:id="@+id/tvTimerMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:text="â±ï¸ Focus Session"
                    android:textSize="12sp"
                    android:textColor="@color/pink_soft"
                    android:background="@drawable/points_pill" />

                <!-- Presets row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/btnPreset25"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="25 min" />

                    <Button
                        android:id="@+id/btnPreset50"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="50 min" />

                    <Button
                        android:id="@+id/btnPreset5"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="5 min" />

                    <Button
                        android:id="@+id/btnPreset10"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="10 min" />
                </LinearLayout>

                <!-- Timer center -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Circular progress ring -->
                    <com.example.bunny.PomodoroRingView
                        android:id="@+id/pomodoroRing"
                        android:layout_width="200dp"
                        android:layout_height="200dp" />

                    <!-- Time text -->
                    <TextView
                        android:id="@+id/tvTimerMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="25:00"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:id="@+id/tvTimerTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25:00 total"
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor"
                        android:layout_marginTop="4dp" />
                </LinearLayout>


                <!-- Timer controls -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="16dp">

                    <Button
                        android:id="@+id/btnStartFocus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â–¶ Start"
                        android:background="@drawable/btn_gradient"
                        android:textColor="@android:color/white" />

                    <Button
                        android:id="@+id/btnPause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="â¸ Pause" />

                    <Button
                        android:id="@+id/btnComplete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="âœ“ Complete" />

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="âœ•" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimerHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:text="ðŸ… Focus deeply on your task, you got this!"
                    android:textSize="12sp"
                    android:textColor="@color/subTitleColor" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4. TWO-COLUMN: Tasks & Study Tips -->
        <LinearLayout
            android:id="@+id/layoutTwoColumn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Task Manager -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTasks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/featureCardBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“š Today's Tasks"
                        android:textColor="@color/titleColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/etTaskTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:hint="Add a new task..."
                        android:textSize="12sp"
                        android:background="@drawable/privacy_bg"
                        android:padding="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/etTaskSubject"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Subject (optional)"
                            android:textSize="12sp"
                            android:background="@drawable/privacy_bg"
                            android:padding="8dp" />

                        <Button
                            android:id="@+id/btnAddTask"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="8dp"
                            android:text="+ Add"
                            android:background="@drawable/btn_gradient"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTasksActiveLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Active Tasks"
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <LinearLayout
                        android:id="@+id/containerActiveTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#FFE4E4E7" />

                    <TextView
                        android:id="@+id/tvTasksCompletedLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Completed"
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <LinearLayout
                        android:id="@+id/containerCompletedTasks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Study Tips -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStudyTips"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/dailyTipBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨ Study Tips"
                        android:textColor="@color/titleColor"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ðŸ§  Use the Feynman Technique: explain concepts in simple words."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="ðŸ“š Practice active recall instead of re-reading notes."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="ðŸŽ¯ Break big tasks into smaller steps so they feel less overwhelming."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- 5. WELLNESS ACTIVITIES -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wellness Activities ðŸ§˜"
            android:textColor="@color/titleColor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutWellness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Deep Breathing -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardBreathing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/lavender_100">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ« Deep Breathing"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Take 5 minutes to breathe deeply and relax."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ• 5 min"
                        android:textSize="11sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Stretching -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStretching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/peach_soft">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ§˜ Stretching"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Gentle stretches to release tension in your body."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ• 10 min"
                        android:textSize="11sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Walk -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWalk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/dailyTipBg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš¶ Quick Walk"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Refresh your mind and boost creativity with a short walk."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ• 15 min"
                        android:textSize="11sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mindful Journal -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMindfulJournal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/pink_soft">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Mindful Journal"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/titleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Write down your thoughts for mental clarity."
                        android:textSize="12sp"
                        android:textColor="@color/subTitleColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="ðŸ• 10 min"
                        android:textSize="11sp"
                        android:textColor="@color/subTitleColor" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- 6. AI RECOMMENDATIONS -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/purple_main">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Tokki's Recommendations"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <!-- Recommendation 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ°"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="0dp"
