<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When pressed -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#C8B8F9"/>  <!-- Brighter purple -->
            android:endColor="#A8D8FF"    <!-- Brighter blue -->
            android:type="linear" />
            <size android:width="56dp" android:height="56dp" />
            <corners android:radius="28dp" />
            <solid android:color="#FFFFFF00" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp"/>
            <stroke android:width="2dp" android:color="#E0D7FF"/>
            <shadowColor>#AAE0E0FF</shadowColor>
            <shadowDx>0</shadowDx>
            <shadowDy>0</shadowDy>
            <shadowRadius>12</shadowRadius>
        </shape>
    </item>

    <!-- Default gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="#D6C9F6"
                android:endColor="#B6E0FF"
                android:centerColor="#E2D6FA"
                android:type="linear" />
            <size android:width="56dp" android:height="56dp" />
            <corners android:radius="28dp" />
        </shape>
    </item>
</selector>
