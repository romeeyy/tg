<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- light lavender to pastel blue to soft sky blue -->
    <gradient
        android:angle="135"
        android:startColor="#C3B5FF"
        android:centerColor="#A0C4FF"
        android:endColor="#BBD0FF"
        android:type="linear" />

    <!-- optional nice rounded corners so the background fills nicely on devices -->
    <corners android:radius="0dp" />

</shape>

